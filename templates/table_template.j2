{% extends "base_template.j2" %}
{{ super() }}
{% block content %}
<h1>{{ title }} Data</h1>
<p>{{ description }}</p>
<table>
    <thead>
        <tr>
            {% for header in headings %}
            <th>{{ header }}</th>
            {% endfor %}
            {% if title != "Checked Books" %}
                <th>Edit</th>
                <th>Delete</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% if title == "Checkouts" %}
            {% for row in data %}
                <tr>
                {% for cell in row %}
                    {% if cell == row[0]%}
                        <td><a href="/checkedbooks/{{ cell }}" onClick="go_to_checkedbooks({{ cell }})">{{ cell }}</a></td>
                    {% else %}
                        <td>{{ cell }}</td>
                    {% endif %}
                {% endfor %}
                <td><a href="#" onClick="update()">Edit</a></td>
                <td><a href="#" onclick="delete()">Delete</a></td> 
                </tr>
            {% endfor %}
        {% else %}
            {% for row in data %}
                <tr>
                {% for cell in row %}
                    <td>{{ cell }}</td>
                {% endfor %}
                {% if title != "Checked Books" %}
                    <td><a href= /update_{{routeURL}}/{{row[0]}} onClick="update()">Edit</a></td>
                    <td><a href="/delete_{{routeURL}}/{{row[0]}}" class = "btn btn-default">Delete</a></td> 
                {% endif %}
                </tr> 
            {% endfor %}
        {% endif %}
    </tbody>
</table>
{% if title == "Checkouts" %}
    {% include "insert_checkout_template.j2" %}
{% elif title == "Book Copies" %}
    {% include "dynamic_search_template.j2" %}
    {% include "insert_bookcopies_template.j2" %}
{% elif title == "Checked Books" %}
{% elif title == "Books on the Shelf" %}
    {% include "dynamic_search_template.j2" %}
{% elif title == "Checked Out Books" %}
    {% include "dynamic_search_template.j2" %}
{% else %}
    {% include "insert_template.j2" %}
{% endif %}
{% endblock %}