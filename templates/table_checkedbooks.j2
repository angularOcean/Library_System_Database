{% extends "nav_template.j2" %}
{{ super() }}
{% block content %}
<h2>{{ title }} Data</h2>
<p>{{ description }}</p>
<table class = "center">
    <thead>
        <tr>
            {% for header in headings %}
            <th>{{ header }}</th>
            {% endfor %}
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
            {% for row in data %}
                <tr>
                {% for cell in row %}
                    <td>{{ cell }}</td>
                {% endfor %}
                <td><a href= /update_{{routeURL}}/{{row[0]}} onClick="update()" class="btn btn-info">Edit</a></td>
                <td><a href="/delete_{{routeURL}}/{{row[0]}}" class = "btn btn-danger">Delete</a></td> 
                </tr> 
            {% endfor %}

    </tbody>
</table>
<br>
