{% extends "nav_template.j2" %}
{{ super() }}
{% block content %}
<h2>Edit {{ title }} Data</h2>
<p>{{ description }}{{data[0]}}</p>


<br>
<div id="insert">
    <form method="POST" id= "update {{ title }}">
        <legend><strong>Update {{ title }} </strong></legend>
        <fieldset class="fields">
                    <label for="patron_choice" >Patron Name</label> 
                    <select id="patron_choice" name="patron_choice" required>
                        {% for name in name_dropdown %}
                            {% if name[0] == data[1] %}:
                                <option value="{{ name[0] }}" selected>{{ name[1] }}</option>
                            {% else %}
                                <option value="{{ name[0] }}" >{{ name[1] }}</option>
                            {% endif %}
                        {% endfor %}
                    </select><br><br>
                    <label>Checkout Date</label>
                    <input type="date" name="checkout_date_input" required value='{{ data[4] }}'><br><br>
                    <label>Return Date</label>
                    <input type="date" name="return_date_input" required value="{{data[5]}}"=>
                </fieldset><br>
          <input class="btn btn-success" type="submit" id="Update {{ title }}" value="Update {{ title }}">
           <input class="btn btn-secondary" type="button" value="Cancel" onClick="location.href='../checkouts.html'">
	</form>
</div>

{% endblock %}